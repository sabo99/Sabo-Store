<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sabo.sabostore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.Main.Checkout.CheckOutActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default"/>
        <activity
            android:name=".Activity.Main.ItemDetailImagePreviewActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.PreviewPhoto" />
        <activity
            android:name=".Activity.Main.ItemsActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.Main.ItemsDetailActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.Main.SearchActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.Account.AccountMenu.Profile.ProfilePhotoPreviewActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.PreviewPhoto" />
        <activity
            android:name=".Activity.Account.AccountMenu.Profile.ProfileActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.Account.AccountMenu.AccountSettings.SubMenu.ChangeEmailActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.Account.AccountMenu.AccountSettings.SubMenu.ResetPasswordActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.Account.AccountMenu.AccountSettings.SubMenu.DeleteAccountActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.Account.AccountMenu.OrderHistoryActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.Account.AccountMenu.FavoriteActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.Account.AccountMenu.AccountSettings.AccountSettingsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.Account.AccountActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".Activity.Main.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SplashScreenActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name=".Activity.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar.Default" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>